<meta charset="utf-8">
<meta name="viewport" content="width=device-width">
<title>Recipe Spotter | Edit Review Page</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

 <link href="/css/styles.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <header>
      <h1><img id = "ham" src="img/hamburger.JPG"> Update Review<img src="img/pizza.JPG"> </h1>
      
    </header>

  <%- include("partials/Navigation.ejs") %>

        <div class= "default_container">
          <form method="POST" action="/updateReview">
            Update Review:
            <input type="text" name="review" 
       value="<%= allReviews[0].Reviewtext %> "> 
            <br><br>
            New Rating:
            <select name="rating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
          </select>
              <br><br>

              <input type="hidden" name="reId" 
       value="<%= allReviews[0].RecipeID %>">

            <button type="submit"> Update Review </button>
          </form>
        </div> 
        
</body>
</html>