<body>

    <header>
      <h1><img id = "ham" src="img/hamburger.JPG"> Account Info<img src="img/pizza.JPG"> </h1>
      
    </header>

    <%- include("partials/Navigation.ejs") %>
        
    <h3 id = 'fav'> Update Account Info</h3>
    <div class= "default_container">
    <form method="POST" action="/Account">
        UserName:
        <input type="text" name="Username" 
        value="<%= Account[0].Username %> "> <br><br>
        FirstName:
        <input type="text" name="Firstname" 
        value="<%= Account[0].Firstname %> "> <br><br>
        LastName:
        <input type="text" name="Lastname" 
        value="<%= Account[0].Lastname %> "> <br><br>
        
        <input type="hidden" name="UserId" 
       value="<%= Account[0].UserID %>">

        <button> Update Info </button>
    <form>
    </div>

    
</body>
